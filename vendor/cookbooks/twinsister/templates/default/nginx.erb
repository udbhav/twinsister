upstream app_server {
  server 127.0.0.1:8181 fail_timeout=0;
}

server {
  listen 80;

  <%= "auth_basic \"Restricted\";" if @protect %>
  auth_basic_user_file <%= @app_root %>/htpasswd;

  <% if @ssl_enabled %>
  <%= "listen 443 ssl;" %>
  <%= "ssl_certificate /home/#{@user}/certificates/mrtwinsister.crt;" %>
  <%= "ssl_certificate_key /home/#{@user}/certificates/mrtwinsister.key;" %>
  <% end %>

  client_max_body_size 4G;
  server_name <%= @hostname %>;

  root <%= @app_root %>/src/public;

  keepalive_timeout 5;

  access_log /var/log/nginx/twinsister.access.log combined;
  error_log /var/log/nginx/twinsister.error.log;

  location @proxy_to_app {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;
    proxy_pass   http://app_server;
  }

  # redirect to ssl on checkout
  location /store/checkout {
    <% if @ssl_enabled %>
    <%= "if ($server_port = 80) {" %>
    <%= "rewrite ^ https://$host$request_uri permanent;}" %>
    <% end %>

    try_files $uri @proxy_to_app;
  }

  error_page 500 502 503 504 /static/500.html;
  error_page 404 /static/404.html;

  location / {
    # checks for static file, if not found proxy to app
    try_files $uri @proxy_to_app;
  }
}